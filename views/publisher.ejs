<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publisher</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
<main>
    <section>
        
        <% heroesPorPublisher.forEach(heroe => { %>
        <article class="<%= heroe.id %>">
            <a href="/detalle/<%= heroe.id %>">
            <h3><%= heroe.superhero %> </h3>
            <img src="/images/<%= heroe.id %>.jpg" alt="imagen de <%= heroe.superhero %>">
        </a> 
            <ul>
                <li>
                    <% if (heroe.publisher === "DC Comics") { %>
                     <a href="/publisher/dc">  
                    <%= heroe.publisher %> 
                    </a>
                 
                    <% } else { %>
                        <a href="/publisher/marvel">  
                            <%= heroe.publisher %> 
                            <% } %>
                </li>
                <li><%= heroe.alter_ego %> </li>
            </ul>
        </article>
        <% }) %>
    </section>

</main>
    
</body>
</html>